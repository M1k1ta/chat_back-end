{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,

    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",

    "outDir": "./build",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
